<h1><%=@tyrant.name%></h1>

<% if @tyrant.avatar.attached? %>
<%= image_tag (src=(url_for(@tyrant.avatar))),width:"300px"%>
<%end%>

<%= form_with model:@rating do |f|%>

<label>Appearance Rating </label>
<%= f.number_field :appearance_rating%>


<br/>

<label>Bio:<%= simple_format @tyrant.bio%></label> 


<label>Economics Policy: </label>
 <%= @tyrant.economics_policy%>
<br/>
<label>Economics Rating </label>
<%= f.number_field :economics_rating%>
<br>

<!--<%= f.number_field :economics_rating%>
<%= f.label :Economics_Rating%>-->
<br/>
<label>Social Policy: <%= @tyrant.social_policy%></label>
<br/>
<label>Social Rating </label>
<%= f.number_field :social_rating%>
<br/>
<label>Warmongering Policy: <%= @tyrant.warmongering_policy%></label>
<br/>
<label>Warmongering Rating </label>
<%= f.number_field :warmongering_rating%>

<br/>
<br/>
<label>Charisma Rating </label>
<%= f.number_field :charisma_rating%>

<br/>
<%= f.collection_select :user_id,@user,:id,:name%>
<br/>
<%= f.hidden_field :tyrant_id,:value => @tyrant.id%>
<br/>
<%= f.submit%>
<%end%>
<br/>


<%= form_with model:@comment do |f|%><br/>
<%= f.label :Comments%><br/>
<%= f.text_area :comments%><br/>
<%= f.collection_select :user_id,@user,:id,:name%>
<br/>
<%= f.hidden_field :tyrant_id,:value => @tyrant.id%>
<br/>
<%= f.submit%>
<%end%>


<ul>
<%@tyrant.comments.each do |x|%>
<li>
 <%=x.comments%>
 </li>
 <%end%>
 </ul>





 




